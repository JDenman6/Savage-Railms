<p id="notice"><%= notice %></p>

<h1>Character Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Linked Attribute</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_skills.each do |character_skill| %>
      <tr>
        <td><%= character_skill.name %></td>
        <td><%= CharacterAttribute.find(character_skill.character_attribute_id).name %></td>
        <td><%= character_skill.description %></td>
        <td><%= link_to 'Show', character_skill %></td>
        <td><%= link_to 'Edit', edit_character_skill_path(character_skill) %></td>
        <td><%= link_to 'Destroy', character_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

